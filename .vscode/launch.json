{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run mocha",
			"type": "node",
			"request": "launch",
			"program": "node_modules/grunt-cli/bin/grunt",
			"stopOnEntry": false,
			"args": ["mochaTest"],
			"cwd": ".",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"externalConsole": false,
			"sourceMaps": true,
			"outDir": ".tmp/server"
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 5858
		}
	]
}